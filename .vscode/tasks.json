{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build calculator",
      "type": "shell",
      "command": "gcc",
      "args": [
        "-g",
        "-I", "c_src",              // header path
        "c_src/main.c",
        "c_src/calculate.c",        // <-- ADD THIS FILE!
        "-o", "c_src/main.exe"      // output stays next to the sources
      ],
      "problemMatcher": [ "$gcc" ],
      "group": { "kind": "build", "isDefault": true }
    }
  ]
}
